<!DOCTYPE html>
<html>
  <head>
    <%-include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <%-include("../partials/header.ejs") %>
    <main>
      <div class="logo__form_header">
        <image class="logo__form" src="/images/logo.png"></image>
      </div>
      <div class="container__form">
      <form action="/auth/login" method="post" class="card" enctype="multipart/form-data">
        <div class="card__header">
          <h2>Login</h2>
        </div>
        <div class="form__section">
          <div class="section__body">
            <div class="form__group">
              <input
                type="email"
                class="inputText"
                id="email"
                name="email"
                required
                placeholder="Ingrese email"
              />
            </div>
          </div>
        </div>
        <div class="form__section">
          <div class="section__body">
            <div class="form__group">
              <input
                type="password"
                id="password"
                name="password"
                class="inputText"
                required
                placeholder="Ingrese contraseÃ±a"
              />
            </div>
          </div>
        </div>
        <div class="form__section" id="section__body__register">
          <button type="submit" class="primary__button">Ingresar</button>
          <a href="register" class="secondary__button">
            Crear cuenta
          </a>
        </div>
        <div class="label__form__register">
          <a href="register">
              Necesito ayuda para ingresar
          </a>
        </div>
      </form>
    </div>
    </main>
    <%-include("../partials/footer.ejs") %>
  </body>
</html>
