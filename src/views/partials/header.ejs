  <script>
    const burger = document.getElementById('burger-menu');
    const navLinks = document.getElementById('nav__links');

    burger.addEventListener('click', (ev) => {
      ev.preventDefault();
      let navLinksClass = navLinks.className.split(' ');
      navLinksClass = navLinksClass.map((className) => {
        if (className === 'nav__links-not-active') {
          className = 'nav__links-active';
        } else if (className === 'nav__links-active') {
          className = 'nav__links-not-active';
        }
        return className;
      });

      navLinks.className = navLinksClass.join(" ");
    });
